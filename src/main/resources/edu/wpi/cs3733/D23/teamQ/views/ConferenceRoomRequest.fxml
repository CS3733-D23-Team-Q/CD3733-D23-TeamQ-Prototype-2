         <padding>
            <Insets left="37.5" top="35.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <MFXTextField fx:id="ConferenceRoomRequest_LocationField" prefHeight="20.0" prefWidth="200.0" promptText="Location">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></MFXTextField>
            <MFXTextField fx:id="ConferenceRoomRequest_ScheduleField" prefHeight="20.0" prefWidth="200.0" promptText="Date/Time" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="100.0" prefWidth="150.0" text="Clean room?" />
                  <MFXCheckbox fx:id="ConferenceRoomRequest_CleaningField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="100.0" prefWidth="150.0" text="Food?" />
                  <ChoiceBox fx:id="ConferenceRoomRequest_FoodField" prefWidth="150.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <MFXTextField fx:id="ConferenceRoomRequest_InstructionsField" prefHeight="20.0" prefWidth="200.0" promptText="Special Instructions" />
         </children>
      </VBox>
   </center>
