         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin></Label>
   </top>
   <bottom>
      <HBox alignment="TOP_CENTER" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="200.0" spacing="37.5" translateX="-30.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <MFXButton fx:id="ConferenceRoomRequest_ClearButton" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #002d59; -fx-background-radius: 10;" text="Clear Fields" textFill="WHITE" HBox.hgrow="ALWAYS" />
